<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.SingleHouseFragment">
    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="#78DEC7" />
    <LinearLayout
        android:id="@+id/ll2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/gobacktohome"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/ic_baseline_arrow_back_24"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginStart="5dp"/>
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="House Details"
            android:textColor="@color/white"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="24sp"
            android:layout_marginStart="60dp"

            android:layout_marginTop="10dp"
            />
    </LinearLayout>


        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_marginTop="70dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_margin="15dp"
                android:background="@drawable/outline_circle"
                android:gravity="top"
                android:hint="Description"
                android:minLines="6"
                android:padding="12dp"
                android:textColorHint="#78DEC7" />

            <EditText
                android:id="@+id/address"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="15dp"
                android:background="@drawable/outline_circle"
                android:hint="Address"
                android:padding="12dp"
                android:textColorHint="#78DEC7" />

            <EditText
                android:id="@+id/nameTenant"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="15dp"
                android:background="@drawable/outline_circle"
                android:hint="Name of the Tenant"
                android:padding="12dp"
                android:textColorHint="#78DEC7" />


            <EditText
                android:id="@+id/nameLandlord"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="15dp"
                android:background="@drawable/outline_circle"
                android:hint="Name of the Landlord"
                android:padding="12dp"
                android:textColorHint="#78DEC7" />

            <EditText
                android:id="@+id/rent"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="15dp"
                android:background="@drawable/outline_circle"
                android:hint="Rent per month"
                android:inputType="number"
                android:padding="12dp"
                android:textColorHint="#78DEC7" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">
            <Button
                android:id="@+id/UpdateButton"
                android:layout_width="150dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:backgroundTint="#78DEC7"
                android:elevation="10dp"
                android:text="Update" />
            <Button
                android:id="@+id/DeleteButton"
                android:layout_width="150dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:backgroundTint="#D0312D"
                android:elevation="10dp"
                android:text="Delete" />
            </LinearLayout>


        </LinearLayout>

</FrameLayout>