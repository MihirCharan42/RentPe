<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HouseDetails">

    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="#78DEC7"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />
    <LinearLayout
        android:id="@+id/ll2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.002">

        <TextView
            android:id="@+id/gobacktohome"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/ic_baseline_arrow_back_24"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="@+id/view2"
            app:layout_constraintEnd_toEndOf="@+id/view2"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="10dp"
            android:layout_marginStart="5dp"/>
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="House Details"
            android:textColor="@color/white"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="24sp"
            android:layout_marginStart="60dp"
            app:layout_constraintBottom_toBottomOf="@+id/view2"
            app:layout_constraintEnd_toEndOf="@+id/view2"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="10dp"
            />
    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteY="70dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="70dp">


        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0">

            <EditText
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:textStyle="bold"
                android:layout_margin="15dp"
                android:background="@drawable/outline_circle"
                android:gravity="top"
                android:hint="Description of the house"
                android:minLines="6"
                android:padding="12dp"
                android:textColorHint="#78DEC7" />

            <EditText
                android:id="@+id/address"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_margin="15dp"
                android:textStyle="bold"
                android:background="@drawable/outline_circle"
                android:hint="Address"
                android:padding="12dp"
                android:textColorHint="#78DEC7" />

            <EditText
                android:id="@+id/nameTenant"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_margin="15dp"
                android:textStyle="bold"
                android:background="@drawable/outline_circle"
                android:hint="Name of the Tenant"
                android:padding="12dp"
                android:textColorHint="#78DEC7" />

            <EditText
                android:id="@+id/tenantUID"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:textStyle="bold"
                android:layout_margin="15dp"
                android:background="@drawable/outline_circle"
                android:hint="Tenant's User ID"
                android:padding="12dp"
                android:textColorHint="#78DEC7" />
            <EditText
                android:id="@+id/PhoneTenant"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_margin="15dp"
                android:background="@drawable/outline_circle"
                android:hint="Phone Number Of Tenant"
                android:textStyle="bold"
                android:inputType="number"
                android:padding="12dp"
                android:textColorHint="#78DEC7" />


            <EditText
                android:id="@+id/nameLandlord"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:textStyle="bold"
                android:layout_margin="15dp"
                android:background="@drawable/outline_circle"
                android:hint="Name of the Landlord"
                android:padding="12dp"
                android:textColorHint="#78DEC7" />

            <EditText
                android:id="@+id/landlordUID"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_margin="15dp"
                android:textStyle="bold"
                android:background="@drawable/outline_circle"
                android:hint="Landlord's User ID"
                android:padding="12dp"
                android:textColorHint="#78DEC7" />
            <EditText
                android:id="@+id/PhoneLandlord"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_margin="15dp"
                android:background="@drawable/outline_circle"
                android:hint="Phone Number Of Landlord"
                android:textStyle="bold"
                android:inputType="number"
                android:padding="12dp"
                android:textColorHint="#78DEC7" />
            <EditText
                android:id="@+id/rent"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_margin="15dp"
                android:background="@drawable/outline_circle"
                android:hint="Rent per month"
                android:textStyle="bold"
                android:inputType="number"
                android:padding="12dp"
                android:textColorHint="#78DEC7" />

            <Button
                android:id="@+id/submitButton2"
                android:layout_width="150dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:layout_marginBottom="40dp"
                android:backgroundTint="#78DEC7"
                android:elevation="10dp"
                android:text="Submit" />


        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>